{
    // Terminal
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "MSYS": {
            "path": "C:\\msys64\\usr\\zsh.exe",
            "args": [
                "--login"
            ],
            "env": {
                "MSYS": "winsymlinks:nativestrict",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit",
                "MSYSTEM": "MINGW64",
                "SHELL": "/usr/bin/zsh"
            }
        }
    },
    "terminal.integrated.allowChords": false, // to send ctrl+k to terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 50000, // buffer line size
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.tabs.enabled": false,
    // Editor
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "HackGen, Consolas, monospace",
    // abcdefghijklmnopqrstuvwxyz
    // ABCDEFGHIJKLMNOPQRSTUVWXYZ
    // あいうえお→←〇◇□△ー一
    // ├│―└
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "first",
    "editor.rulers": [
        80
    ],
    "files.autoGuessEncoding": true,
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.autofetch": true,
    "glassit.alpha": 220,
    "markdown.preview.fontSize": 16,
    "window.menuBarVisibility": "hidden",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    // vim
    "vim.useSystemClipboard": true, // システムのclipboardにコピー
    "vim.visualstar": true, // カーソル上にあるワードを"*"で検索
    "vim.hlsearch": true, // 検索結果のハイライト
    "vim.easymotion": true, // カーソル移動の可視化
    "vim.leader": "<space>", // Leader キー
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            // yank from cursor position to end of line
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        {
            // easy motion
            "before": [
                "f"
            ],
            "after": [
                "leader",
                "leader",
                "s"
            ]
        },
        {
            // hide highlight search
            "before": [
                "<Esc>",
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    // vim IME disable with single ESC
    // "vim.autoSwitchInputMethod.enable": true,
    // "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/fcitx-remote",
    // "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/fcitx-remote {im}",
    // "vim.autoSwitchInputMethod.defaultIM": "-c",
    // LaTeX
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.outDir": "%DIR%/build",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.zoom": "page-width",
    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "Chromium",
    "C_Cpp.default.cppStandard": "c++17",
    // CMake
    "cmake.configureOnOpen": false,
    // Doxygen
    "doxdocgen.generic.authorEmail": "kerikun11+github@gmail.com",
    "doxdocgen.generic.authorName": "Ryotaro Onuki",
    "doxdocgen.generic.authorTag": "@author {author} <{email}>",
    "doxdocgen.file.copyrightTag": [
        "@copyright Copyright {year} Ryotaro Onuki <kerikun11+github@gmail.com>"
    ],
    "doxdocgen.file.fileOrder": [
        "file",
        "brief",
        "author",
        "date",
        "copyright",
        "custom"
    ],
    // PlatformIO
    "platformio-ide.activateOnlyOnPlatformIOProject": true,
    "platformio-ide.disableToolbar": true,
    // PlantUML
    "plantuml.server": "https://www.plantuml.com/plantuml",
